<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text_large"
            android:paddingTop="@dimen/padding_text_large"
            tools:text="Title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/home_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_title"
            android:layout_marginTop="@dimen/margin_text"
            android:paddingLeft="@dimen/padding_text_large"
            tools:text="Region"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/home_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_region"
            android:layout_marginTop="@dimen/margin_text"
            android:paddingLeft="16dp"
            tools:text="City"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/home_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/home_city"
            android:layout_marginTop="@dimen/margin_text"
            android:paddingRight="@dimen/padding_text_large"
            tools:text="Phone"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/home_phone"
            android:layout_marginTop="@dimen/margin_text"
            android:paddingBottom="@dimen/padding_text_large"
            android:paddingRight="@dimen/padding_text_large"
            tools:text="Address"
            android:textSize="@dimen/text_size_medium"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>